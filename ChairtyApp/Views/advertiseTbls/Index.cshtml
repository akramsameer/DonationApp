@model IEnumerable<ChairtyApp.Models.advertiseTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.advText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.advImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.advText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.advImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.adverId }) |
            @Html.ActionLink("Details", "Details", new { id=item.adverId }) |
