@model IEnumerable<ChairtyApp.Models.advertiseTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}
@* ReSharper disable UnknownCssClass *@

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Advertise</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Advertise</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data</strong>
                        <span class="float-right">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
                                <i class="fa fa-plus"></i>  Add
                            </button>
                        </span>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>النص</th>
                                    <th>الصورة</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var adv in Model)
                            {
                                <tr>
                                    <td> @adv.advText </td>
                                    <td>
                                        <img src="@Url.Content(adv.advImage)" alt="Image"/>
                                    </td>
                                    <td>
                                        <button type="button" id="@(adv.adverId)" class="eleToBeClicked btn btn-secondary" data-toggle="modal" data-target="#editModel">
                                            <i class="fa fa-refresh"></i>
                                        </button>
                                        <button type="button" id="@(adv.adverId)" class="eleToBeClicked btn btn-danger" data-toggle="modal" data-target="#deleteModel">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- .animated -->
</div>

@*Add*@

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">ADD Advertise</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="text-add" class=" form-control-label">النص</label>
                    <input type="text" id="text-add" placeholder="Enter username for subadmin " class="form-control">
                </div>

                <div class="form-group">
                    <input type="file" name="UploadFile" id="txtUploadFile" class="makethispretty" />
                    <input type="text" id="imagePath" hidden="hidden" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnApproveAdd" class="btn btn-primary">Confirm</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@*Edit*@

<div class="modal fade" id="editModel" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Advertise</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="text-edit" class=" form-control-label">النص</label>
                        <input type="text" id="text-edit" placeholder="Enter username for subadmin " class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="image-add" class=" form-control-label">الصورة</label>
                        <input type="file" class="form-control-file" id="image-add" size="60" />
                    </div>
                    <input type="text" id="imagePath" hidden="hidden" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Confirm</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@*Delete*@
<div class="modal fade" id="deleteModel" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Advertise</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Confirm</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    <script src="~/Content/Scripts/jquery.js"></script>
    <script src="~/Content/Scripts/bootstrap.js"></script>
    <script>
        var TeamDetailPostBackURL = '/advertiseTbls/';
        var id;
        $(function () {
            var selected;
            $(".eleToBeClicked").click(function () {
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('id');
                var urlElemId = '#' + id;
                selected = {
                    url: $(urlElemId).text(),
                    id: id
                };
                $("#url-edit").val(selected.url);
            });

            $('#btnApproveAdd').click(function () {
                var url = $("#text-add").val();
                $.ajax({
                    type: "POST",
                    url: TeamDetailPostBackURL + 'Create',
                    data: { "advText": url },
                    success: function (data) {
                        $("#url-edit").val(data.vedioUrl);
                        $('#editModel').modal('hide');
                        location.reload();
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            });


            $('#btnApproveEdit').click(function () {
                var url = $("#url-edit").val();
                $.ajax({
                    type: "POST",
                    url: TeamDetailPostBackURL + 'Edit/' + selected.id,
                    data: { "vedioUrl": url },
                    success: function (data) {

                        $("#url-edit").val(data.vedioUrl);
                        $('#editModel').modal('hide');
                        location.reload();
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            });

            $('#btnApproveDelete').click(function () {
                $.ajax({
                    type: "POST",
                    url: TeamDetailPostBackURL + 'Delete/' + selected.id,
                    success: function (data) {
                        location.reload();
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            });

        });

    </script>

    <script>

        $('#txtUploadFile').on('change', function (e) {
            var files = e.target.files;
            var myID = 3; //uncomment this to make sure the ajax URL works
            if (files.length > 0) {
                if (window.FormData !== undefined) {
                    var data = new FormData();
                    for (var x = 0; x < files.length; x++) {
                        data.append("file" + x, files[x]);
                    }

                    $.ajax({
                        type: "POST",
                        url: '/advertiseTbls/UploadFile?id=' + myID,
                        contentType: false,
                        processData: false,
                        data: data,
                        success: function (result) {
                            console.log(result);
                            $("#imagePath").val(result);
                        },
                        error: function (xhr, status, p3, p4) {
                            var err = "Error " + " " + status + " " + p3 + " " + p4;
                            if (xhr.responseText && xhr.responseText[0] == "{")
                                err = JSON.parse(xhr.responseText).Message;
                            console.log(err);
                        }
                    });
                } else {
                    alert("This browser doesn't support HTML5 file uploads!");
                }
            }
        });
    </script>

}

