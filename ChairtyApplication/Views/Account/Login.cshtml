@using ChairtyApplication.Models.ViewModels.Authentication
@model ChairtyApplication.Models.ViewModels.Authentication.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="slider-menu">
    <div class="main-menu">
        <div class="container">
            <nav class="navbar navbar-default text-center">
                <div class="container-fluid">



                    <a href="@Url.Action("Index", "Home")" class="text-white">
                        <img src="~/Content/images/logoHome.png" style="padding-bottom:5px;">
                        <h1 style="display:inline-block; font-family:he1;"> جمعيتى </h1>
                    </a>

                </div>


                <!-- /.container-fluid -->
            </nav>
        </div>
    </div>
</section>
<section id="log-signup">

    <div class="sec-overlay"></div>
    <div class="container">
        <div class="content">

            <div class="col-md-8 col-md-offset-2">
                <ul class="nav nav-tabs">
                    <li class="">
                        <a href="@Url.Action("Login", "Account")">تسجيل الدخول</a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Register", "Account")">سجل الآن</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="login-tab">
                        <h2> تسجيل الدخول</h2>

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="form_username_email">اسم المستخدم/البريد الالكتروني</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label for="form_password">كلمه المرور</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="checkbox pull-right">
                                <label for="form_checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe) تذكرني عند الدخول مره اخري
                                </label>
                            </div>
                            <div class="form-group pull-left">
                                <button type="submit" class="btn btn-default"> دخول </button>
                            </div>
                            <div class="clear">
                                <a href="#" class=" text-white"> هل نسيت كلمه السر ؟</a>
                            </div>
                            <div class="clear text-center ">
                                <a class="btn btn-default" href="#" data-bg-color="#3b5998" style="background: rgb(59, 89, 152) !important; color: #fff;">تسجيل الدخول بالفيسبوك</a>
                                <a class="btn btn-default" href="#" data-bg-color="#00acee" style="background: rgb(0, 172, 238) !important; color: #fff;">تسجيل الدخول بتويتر</a>
                            </div>

                        }

                    </div>

                    <div class="tab-pane fade p-15" id="register-tab">



                        <h2> اليس لديك حساب ؟ سجل الآن.</h2>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>الاسم</label>
                                <input name="form_name" class="form-control" type="text">
                            </div>
                            <div class="form-group col-md-6">
                                <label>عنوان البريد الالكتروني</label>
                                <input name="form_email" class="form-control" type="email">

                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="form_kind_blood"> نوع فصيله الدم</label>
                                <input id="form_kind_blood" name="form_kind_blood" class="form-control" type="text">
                            </div>

                            <div class="form-group col-md-6">
                                <label for="form_choose_status"> متبرع / حاله </label>

                                <select id="form_choose_status" name="form_choose_status" class="form-control">
                                    <option value="donate">متبرع</option>
                                    <option value="status">حاله</option>
                                </select>
                            </div>
                        </div>
                        <div class="row" id="type-status">
                            <div class="form-group col-md-6">
                                <label for="form_national_number"> الرقم القومي </label>
                                <input id="form_national_number" name="form_national_number" class="form-control" type="text">
                            </div>

                            <div class="form-group col-md-6">
                                <label for="form_problem"> ماهي مشكلتك التي تعاني منها ؟ </label>
                                <input id="form_problem" name="form_problem" class="form-control" type="text">
                            </div>

                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="form_choose_password">اختر كلمه المرور</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group col-md-6">
                                <label>أعاده إدخال كلمه المرور</label>
                                <input id="form_re_enter_password" name="form_re_enter_password" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-default" type="submit">سجل الآن </button>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}

