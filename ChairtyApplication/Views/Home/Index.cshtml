<section id="news">
    <div class="sec-overlay"></div>
    <div class="container">
        <div class="content">
            <div id="carousel-example-generic2" class="carousel slide" data-ride="carousel">
                <h2 class="text-right">
                    اخبار الجمعيه
                </h2>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @for (var i = 0; i < Model.News.Count; i++)
                    {
                        var news = Model.News[i];
                        if (i == 0)
                        {
                            @:<div class="item active">
                            }
                            else
                            {
                                @:<div class="item">
                                }
                                <div class="row">
                                    <div class="col-md-10 ">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-6 ">
                                                <div class="img-hover-border img-responsive">
                                                    <a href="@Url.Content(news.Image)" data-gallery="">
                                                        <img class="img-fullwidth" style="max-height: 300px" src="@Url.Content(news.Image)" alt="">
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="about-details">
                                                    <p>
                                                        @news.Description
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            @:</div>
                        }
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic2" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic2" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>

