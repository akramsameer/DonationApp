                                                            @:<figure style="width: max-content; height: max-content">
                                                                @:      <iframe src="@cur.URL" frameborder="0" allowfullscreen></iframe>
                                                            @:</figure>
                                                        @:</div>
                                                        @:<div class="clearfix"></div>
                                                    @:</div>
                                                @:</div>
                                            }
                                        </div>
                                    @:</div>
                                }
