@section scripts
{
    <script>
        $(document).ready(function () {

            $('#ContactUsPost').click(function () {
                var ggg = $('#messageCU').val();
                $.post("/Home/Contact/", { MessageDetails: ggg })
                    .done(function () {
                        location.reload();
                    }).fail(function () {
                        console.log('حدث خطأ', 'الرجاء المحاولة مرة أخرى.');
                    });
            });
            $.get("/Home/About/")
                .done(function (data) {
                    console.log(data);
                    $('#aboutUsText').text(data);
                }).fail(function () {
                    console.log('حدث خطأ', 'الرجاء المحاولة مرة أخرى.');
                });

        });
    </script>

}
