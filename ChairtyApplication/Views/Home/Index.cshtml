                                            <div class="col-xs-4 ">
                                                <div class="news">
                                                    <div class="poster">
                                                        <figure style="width: max-content; height: max-content">
                                                            <iframe src="@cur.URL" frameborder="0" allowfullscreen></iframe>
                                                        </figure>
                                                    </div>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                            @if (i + 1 < Model.Videos.Count)
                                            {
                                                i++;
                                                cur = Model.Videos[i];
                                                @:<div class="col-xs-4 ">
                                                    @:<div class="news">
                                                        @:<div class="poster">
                                                            @:<figure style="width: max-content; height: max-content">
                                                                @:      <iframe src="@cur.URL" frameborder="0" allowfullscreen></iframe>
