<section id="all">
    <div class="sec-overlay"></div>
    <div class="container">
        <div class="content">
            <div class=" col-xs-12 col-md-8">

                <section id="videos">
                    <div id="carousel-example-generic4" class="carousel slide" data-ride="carousel">
                        <h2 class="text-right">
                            الفيديوهات
                        </h2>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            @for (var i = 0; i < Model.Videos.Count; i++)
                            {
                                var cur = Model.Videos[i];

                                if (i == 0)
                                {
                                    @:<div class="item active">
                                    }
                                    else
                                    {
                                        @:<div class="item">
                                        }
