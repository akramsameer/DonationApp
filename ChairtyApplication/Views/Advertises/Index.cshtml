@model IEnumerable<ChairtyApplication.Models.Advertise>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Advertise</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Advertise</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data</strong>
                        <span class="float-right">
                            <a href="@Url.Action("Create")">
                                <button type="button" class="btn btn-primary">
                                    <i class="fa fa-plus"></i> Add
                                </button>
                            </a> </span>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>النص</th>
                                    <th>الصورة</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var adv in Model)
                                {
                                    <tr>
                                        <td> @adv.Text </td>
                                        <td>
                                            <img src="@Url.Content(adv.Image)" alt="Image" />
                                        </td>
                                        <td>
                                            <button type="button" id="@(adv.Id)" class="eleToBeClicked btn btn-secondary" data-toggle="modal" data-target="#editModel">
                                                <i class="fa fa-refresh"></i>
                                            </button>
                                            <button type="button" id="@(adv.Id)" class="eleToBeClicked btn btn-danger" data-toggle="modal" data-target="#deleteModel">
                                                <i class="fa fa-close"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- .animated -->
</div>


@section scripts
{

    <script src="~/Content/Scripts/jquery.js"></script>
    <script src="~/Content/Scripts/bootstrap.js"></script>
    <script>

        $('#txtUploadFile').on('change', function (e) {
            var files = e.target.files;
            var myID = 3; //uncomment this to make sure the ajax URL works
            if (files.length > 0) {
                if (window.FormData !== undefined) {
                    var data = new FormData();
                    for (var x = 0; x < files.length; x++) {
                        data.append("file" + x, files[x]);
                    }

                    $.ajax({
                        type: "POST",
                        url: '/advertiseTbls/UploadFile?id=' + myID,
                        contentType: false,
                        processData: false,
                        data: data,
                        success: function (result) {
                            console.log(result);
                            $("#imagePath").val(result);
                        },
                        error: function (xhr, status, p3, p4) {
                            var err = "Error " + " " + status + " " + p3 + " " + p4;
                            if (xhr.responseText && xhr.responseText[0] == "{")
                                err = JSON.parse(xhr.responseText).Message;
                            console.log(err);
                        }
                    });
                } else {
                    alert("This browser doesn't support HTML5 file uploads!");
                }
            }
        });
    </script>

}


