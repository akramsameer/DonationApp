@model IEnumerable<ChairtyApplication.Models.Advertise>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Advertise</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Advertise</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data</strong>
                        <span class="float-right">
                            <a href="@Url.Action("Create")">
                                <button type="button" class="btn btn-primary">
                                    <i class="fa fa-plus"></i> Add
                                </button>
                            </a>
                        </span>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>النص</th>
                                    <th>الصورة</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var adv in Model)
                                {
                                    <tr>
                                        <td> @adv.Text </td>
                                        <td>
                                            
                                            <a href="@Url.Content(adv.Image)" data-gallery="" >
                                                <img class="img-md" src="@Url.Content(adv.Image)" alt="">
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit",new{id = adv.Id})">
                                                <button type="button" class="btn btn-secondary">
                                                    <i class="fa fa-refresh"></i>
                                                </button>
                                            </a>
                                            <a href="@Url.Action("Delete",new{id = adv.Id})">
                                                <button type="button" class="btn btn-danger">
                                                    <i class="fa fa-close"></i>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- .animated -->
</div>




