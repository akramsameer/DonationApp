            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DetailsProblem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DetailsProblem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DetailsProblem, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (ViewBag.ruleid == 1)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.UserIdAssign, "UserIdAssign", htmlAttributes: new {@class = "control-label col-md-2"})
